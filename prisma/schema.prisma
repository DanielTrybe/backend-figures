generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Figures {
  id             Int           @id @default(autoincrement())
  name           String        @db.LongText
  category       String        @db.LongText
  price          String        @db.LongText
  specifications String        @db.LongText
  releaseInfo    String        @db.LongText
  details        String        @db.LongText
  createdAt      DateTime      @default(now())
  serieID        Int
  manufacturerID Int
  Images         Images[]
  Serie          Series        @relation(fields: [serieID], references: [id])
  Manufacturer   Manufacturers @relation(fields: [manufacturerID], references: [id])
}

model Series {
  id      Int       @id @unique @default(autoincrement())
  serie   String
  Figures Figures[]
}

model Manufacturers {
  id           Int    @id @unique @default(autoincrement())
  manufacturer String

  Figures Figures[]
}

model Images {
  id                Int     @id @default(autoincrement())
  link              String
  figureID          Int
  figureReferenceID Figures @relation(fields: [figureID], references: [id])
}
